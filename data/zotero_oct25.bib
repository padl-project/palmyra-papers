	journal = {Journal of helminthology},
	author = {Vidal-Martínez, VM and Aguirre-Macedo, ML and McLaughlin, JP and Hechinger, RF and Jaramillo, AG and Shaw, JC and James, AK and Kuris, AM and Lafferty, Kevin D},
