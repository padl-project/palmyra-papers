	keywords = {great-barrier-reef,, base-lines,, bed shear stress,, biophysical coupling,, central pacific,, community structure,, competition,, coral morphology,, habitat complexity,, hawaiian-islands,, hydrodynamic disturbances,, internal waves,, northern line islands,, reef-building organisms,, regime shift,, regression trees,, tipping points,, water velocity, waves,},
	pages = {33--48},
}

@article{knapp_cryptic_2015,
	title = {Cryptic species obscure introduction pathway of the blue {Caribbean} sponge ({Haliclona} ({Soestella}) caerulea),(order: {Haplosclerida}) to {Palmyra} {Atoll}, {Central} {Pacific}},
