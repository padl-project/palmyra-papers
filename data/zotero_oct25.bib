	note = {Number: 1},
	keywords = {Animals,, Coral Reefs,, Fishes,, Predatory Behavior,, Chronic risk,, Coral reef,, Foraging behavior,, Herbivory,, Social Behavior,, Territory size},
	pages = {139--149},
}

@article{edwards_large-area_2017,
