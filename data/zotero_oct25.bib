	author = {Rogers, Justin S and Monismith, Stephen G and Koweek, David A and Dunbar, Robert B},
	month = jan,
	year = {2016},
	note = {Number: 1},
	keywords = {atoll,, bottom friction,, coral reef,, dissipation,, flow, geomorphology,, model,, morphology,, prediction,, reef,, roughness,, setup,, surface waves,, wave breaking,},
	pages = {350--367},
}

@article{bradley_resetting_2017,
