}

@article{handler_arthropod_2007,
	title = {Arthropod {Surveys} on {Palmyra} {Atoll}, {Line} {Islands}, and {Insights} into the {Decline} of the {Native} {Tree} {Pisonia} grandis ({Nyctaginaceae}) $^{\textrm{1}}$},
	volume = {61},
